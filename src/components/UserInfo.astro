---
// src/components/UserInfo.astro
const user = {
  foto: "assets/perfil.jpg",
  codigo: "1152196",
  tipoDoc: "CC",
  doc: "1005028827",
  primerNombre: "Johan",
  segundoNombre: "Sebastián",
  apellido1: "López",
  apellido2: "Ortega",
  celular: "3147844269",
  direccion: "Calle 23 a #10-82 Patio Antiguo",
  correo: "lopezortega@gmail.com",
  correoInst: "johansebastianlo@ufps.edu.co"
}
---

<main class="w-full flex justify-center p-8">
  <section class="bg-white shadow-md rounded-xl p-10 w-full max-w-5xl">
    <div class="flex items-center mb-8 gap-3">
      <svg class="w-6 h-6 text-blue-900" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M5.121 17.804A7 7 0 1116.88 6.196a7 7 0 01-11.758 11.608z" />
      </svg>
      <h2 class="text-2xl font-semibold text-blue-900">Información Personal</h2>
    </div>

    <div class="flex gap-10 items-start">
      <!-- Foto -->
      <div class="flex-shrink-0">
        <img src={user.foto} alt="Foto del usuario" class="w-40 h-40 rounded-full object-cover border shadow-sm" />
      </div>

      <!-- Datos personales -->
      <div class="grid grid-cols-2 gap-y-4 gap-x-10 text-sm text-gray-900 w-full">
        <div class="flex items-center gap-2"><span class="font-semibold">Código:</span> {user.codigo}</div>
        <div class="flex items-center gap-2"><span class="font-semibold">Tipo de documento:</span> {user.tipoDoc}</div>

        <div class="flex items-center gap-2"><span class="font-semibold">Documento:</span> {user.doc}</div>
        <div class="flex items-center gap-2"><span class="font-semibold">Primer nombre:</span> {user.primerNombre}</div>

        <div class="flex items-center gap-2"><span class="font-semibold">Segundo nombre:</span> {user.segundoNombre}</div>
        <div class="flex items-center gap-2"><span class="font-semibold">Primer apellido:</span> {user.apellido1}</div>

        <div class="flex items-center gap-2"><span class="font-semibold">Segundo apellido:</span> {user.apellido2}</div>
        <div class="flex items-center gap-2"><span class="font-semibold">Celular:</span> {user.celular}</div>

        <div class="col-span-2 flex items-center gap-2"><span class="font-semibold">Dirección:</span> {user.direccion}</div>
        <div class="flex items-center gap-2"><span class="font-semibold">Correo electrónico:</span> {user.correo}</div>
        <div class="flex items-center gap-2"><span class="font-semibold">Correo institucional:</span> {user.correoInst}</div>
      </div>
    </div>
  </section>
</main>
